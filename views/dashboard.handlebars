<div class="row">
  <div class="col-auto blog-create">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <h3>Create a New Blog:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-name">Blog Title:</label><br>
        <input class="form-input" type="text" id="blog-name" name="blog-name" />
      </div>
      <div class="form-group">
        <label for="blog-desc">Content:</label><br>
        <textarea class="form-input" id="blog-desc" name="blog-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if blogs.length}}
  <div class="col-md-4 blogList">
    <h3 class="">Current Blog Posts:</h3>

    {{#each blogs as |blog|}}
    <div class="row">
      <div class="col-md-6">
        <p class="current-blogs"><a href="/api/blog/{{blog.id}}">{{blog.name}}</a></p>
      </div>
      <div class="col-md-4 delete-btn">
        <button class="btn btn-sm btn-danger delete-btn" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    <hr>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/dashboard.js"></script>
